<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.example.frg.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_first"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:scaleType="fitXY"
        android:background="@drawable/bg_profile">

        <ImageView
            android:id="@+id/my_fragment_message_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/icon_message"/>
        <ImageView
            android:id="@+id/my_fragment_avatar_img"
            android:layout_centerInParent="true"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/me_avatar_boy"/>
        <TextView
            android:layout_centerInParent="true"
            android:text="未登录"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/my_fragment_avatar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/my_fragment_settings_img"
            android:layout_alignBottom="@id/my_fragment_message_img"
            android:src="@drawable/me_settings"
            android:layout_width="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_height="15dp" />
        <ImageView
            android:id="@+id/my_fragment_scan_img"
            android:layout_width="30dp"
            android:layout_toLeftOf="@id/my_fragment_settings_img"
            android:layout_alignBottom="@id/my_fragment_message_img"
            android:layout_marginRight="25dp"
            android:src="@drawable/icon_scan"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/my_fragment_car_tv"
            android:drawableTop="@drawable/icon_cart"
            android:drawablePadding="10dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="购物车"/>
        <TextView
            android:id="@+id/my_fragment_order_tv"
            android:drawableTop="@drawable/icon_order"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单"/>
        <TextView
            android:id="@+id/my_fragment_coupon_tv"
            android:drawableTop="@drawable/icon_coupon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="礼券"/>
        <TextView
            android:id="@+id/my_fragment_service_tv"
            android:drawableTop="@drawable/icon_service"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="客服"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="13dp"
        />
    <RadioGroup
        android:background="@drawable/text_my_fragment_shap"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="礼物"
            android:button="@null"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RadioButton
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="15sp"
            android:button="@null"
            android:text="攻略"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </RadioGroup>
    <ImageView
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_holder_favourite"/>
    <TextView
        android:textColor="#a59ca1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="喜欢的礼物摆在这里哦"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    

</LinearLayout>
