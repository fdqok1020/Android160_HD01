<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        android:src="@drawable/ig_holder_image"
        android:id="@+id/child_item_img"

        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"/>
    <TextView
        android:id="@+id/tv_child_like"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/child_item_shap"
        android:text="关注度"
        android:gravity="right"
        android:textSize="12sp"
        android:drawablePadding="8dp"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_action_compact_favourite_normal"

        android:textColor="#000000"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_alignBottom="@+id/child_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="title"/>

</RelativeLayout>