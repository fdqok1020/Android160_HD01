<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="280dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/card_imageview"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/pic2"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/card_name"
                android:layout_below="@+id/card_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:text="这是CardView"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:layout_below="@+id/card_name"
                android:id="@+id/card_price"
                android:textColor="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"/>
            <TextView
                android:id="@+id/card_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜爱度"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_small_heart_normal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignBottom="@+id/card_price"/>


        </RelativeLayout>


</android.support.v7.widget.CardView>