<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.app.LoginActivity">

    <TextView

        android:layout_marginTop="10dp"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textStyle="bold"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="#df5d5d"/>
<ImageView
    android:src="@mipmap/ic_title_back"
    android:layout_width="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_alignBottom="@+id/tv_title"
    android:layout_height="wrap_content" />

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#e9e8e8"/>

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_below="@+id/line1"
        android:src="@mipmap/login_phone"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_marginTop="40dp"
        android:layout_height="30dp" />
    <EditText
        android:id="@+id/ed_phone"
        android:layout_toRightOf="@id/iv_phone"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:hint="手机号码"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:inputType="phone"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/iv_psw"
        android:layout_below="@+id/ed_phone"
        android:src="@mipmap/forget_password"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_marginTop="40dp"
        android:layout_height="30dp" />
    <EditText
        android:id="@+id/ed_psw"
        android:layout_toRightOf="@id/iv_psw"
        android:layout_below="@id/ed_phone"
        android:layout_width="match_parent"
        android:hint="密码"
        android:inputType="textPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_height="50dp"  />

    <Button
        android:id="@+id/btn_submint"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/ed_psw"
        android:layout_width="match_parent"
        android:background="@mipmap/btn_bujie"
        android:text="提交"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_height="60dp" />
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/btn_submint"
        android:layout_width="2dp"
        android:layout_centerHorizontal="true"
        android:layout_height="15dp"
        android:layout_marginTop="25dp"
        android:background="#e9e8e8"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:text="快速注册"
        android:layout_alignBottom="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/line2"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"/>
    <TextView
        android:id="@+id/tv_psw"
        android:layout_width="wrap_content"
        android:text="忘记密码"
        android:layout_alignBottom="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/line2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"/>


    <View
        android:id="@+id/line3"
        android:layout_below="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="#e9e8e8"/>
    <TextView
        android:id="@+id/tv_1"
        android:text="第三方登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/line3"/>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/third_qq"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/third_weixin"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/third_weibo"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
