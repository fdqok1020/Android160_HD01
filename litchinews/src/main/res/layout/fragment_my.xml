<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e8e8"
    tools:context="com.example.frg.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_lever1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_floor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@mipmap/redbg" />

        <ImageView
            android:id="@+id/iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/dead_avatar" />

        <TextView
            android:id="@+id/tv_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="点击登录"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rl_levle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_weather"
            android:layout_toRightOf="@+id/iv_weather"
            android:src="@mipmap/add1" />

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="45dp"
            android:layout_marginTop="10dp"
            android:layout_height="45dp"
            android:layout_marginLeft="90dp"
            android:src="@mipmap/qing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/iv_weather"
            android:layout_marginLeft="70dp"
            android:text="武汉市29/20"
            android:textSize="15sp" />

        <View
            android:id="@+id/v_line"
            android:layout_width="2dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="#e9e8e8" />

        <ImageView
            android:id="@+id/iv_constellatory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@+id/v_line"
            android:src="@mipmap/jinniu" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_constellatory"
            android:layout_alignTop="@+id/iv_constellatory"
            android:src="@mipmap/add1" />

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_constellatory"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@+id/v_line"
            android:text="金牛月"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#e9e8e8" />

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <ImageView
            android:id="@+id/iv_tree"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/setting_tree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_tree"
            android:layout_alignBottom="@+id/iv_tree"
            android:layout_marginBottom="5dp"
            android:text="我的荔枝树"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more_arrow" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="520dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_tree"
            android:layout_marginTop="7dp"
            android:background="#e9e8e8" />

        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/setting_fav" />

        <TextView
            android:id="@+id/tv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_fav"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_fav"
            android:text="我的收藏"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_fav"
            android:src="@mipmap/more_arrow" />

        <View
            android:id="@+id/v_line3"
            android:layout_width="520dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_fav"
            android:layout_marginTop="8dp"
            android:background="#e9e8e8" />


        <ImageView

            android:id="@+id/iv_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/setting_exchange" />

        <TextView
            android:id="@+id/tv_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_exchange"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_exchange"
            android:text="我的兑换"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_exchange"
            android:src="@mipmap/more_arrow" />

        <View
            android:id="@+id/v_line4"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_exchange"
            android:layout_marginTop="8dp"
            android:background="#e9e8e8" />


        <ImageView
            android:id="@+id/iv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/setting_mail" />

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_mail"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_mail"
            android:text="用户反馈"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_mail"
            android:src="@mipmap/more_arrow" />

        <View
            android:id="@+id/v_line5"
            android:layout_width="520dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_mail"
            android:layout_marginTop="8dp"
            android:background="#e9e8e8" />

        <ImageView
            android:id="@+id/iv_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/setting_us" />

        <TextView
            android:id="@+id/tv_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_us"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_us"
            android:text="关于我们"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_us"
            android:src="@mipmap/more_arrow" />

        <View
            android:id="@+id/v_line6"
            android:layout_width="520dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_us"
            android:layout_marginTop="8dp"
            android:background="#e9e8e8" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/setting_setting" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_setting"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_setting"
            android:textStyle="bold"
            android:text="设置"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_setting"
            android:src="@mipmap/more_arrow" />



    </RelativeLayout>


</LinearLayout>
